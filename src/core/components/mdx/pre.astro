---
const props = Astro.props;
---

<pre {...props}>
    <slot />
</pre>

<style>
    pre {
        /* background-color: var(--background-code-block) !important; */
        background-color: var(--background-pre) !important;
        border: solid 0.1em var(--border-color);
        backdrop-filter: blur(1px);
        padding: 1em;
        border-radius: 0.5em;
        display: grid;
    }
</style>
