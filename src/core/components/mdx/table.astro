---
const props = Astro.props
---

<table {...props}>
    <slot />
</table>

<style lang='scss'>
    table {
        width: 100%;
        border-spacing: 0;
        border: 1px solid var(--border-color);
        border-radius: 0.5em;
        font-size: 0.9em;
        table-layout: fixed;

        :global(th) {
            white-space: nowrap;
        }
        :global(th),
        :global(td) {
            padding: 0.5em;
            border-right: 1px solid var(--border-color);
            border-bottom: 1px solid var(--border-color);
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;
            font-size: 0.9em;
        }

        :global(th:last-child),
        :global(td:last-child) {
            border-right: none;
        }

        :global(tr:last-child td) {
            border-bottom: none;
        }
    }
</style>
