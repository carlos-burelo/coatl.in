---
const { name } = Astro.props;

const path = `/src/core/icons/${name}.svg`;

const icons = import.meta.glob<{ default: ImageMetadata }>(
    "/src/core/icons/*.svg",
    {
        query: "?raw",
        import: "default",
    },
);

const icon = await icons[path]();
---

<Fragment set:html={icon} />
